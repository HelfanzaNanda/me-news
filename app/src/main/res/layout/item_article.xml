<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    android:elevation="2dp"
    app:cardCornerRadius="8dp"
    android:layout_marginTop="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <LinearLayout
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <RelativeLayout
            android:layout_marginBottom="10dp"
            android:id="@+id/relative_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginEnd="10dp"
                android:id="@+id/img_user"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_undraw_male_avatar_323b"/>

            <TextView
                android:layout_marginBottom="3dp"
                android:textStyle="bold"
                android:layout_toEndOf="@id/img_user"
                android:text="nanda"
                android:id="@+id/txt_name"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_below="@id/txt_name"
                android:layout_toEndOf="@id/img_user"
                android:text="nanda@gmailcom"
                android:id="@+id/txt_email"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            
        </RelativeLayout>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginBottom="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background"
                android:id="@+id/img_article"
                android:layout_width="match_parent"
                android:layout_height="150dp"/>

            <TextView
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="abjsjdj"
                android:layout_below="@+id/img_article"
                android:id="@+id/txt_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginBottom="8dp"
                android:textSize="16sp"
                android:layout_below="@id/txt_title"
                android:id="@+id/txt_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.google.android.material.button.MaterialButton
                android:textColor="@color/colorPrimaryDark"
                android:textAllCaps="false"
                android:layout_below="@id/txt_content"
                android:backgroundTint="#DDDDDD"
                android:text="Baca Selengkapnya"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/txt_content"
                android:textSize="16sp"
                android:text="20 komentar"
                android:id="@+id/txt_total_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>
        
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>